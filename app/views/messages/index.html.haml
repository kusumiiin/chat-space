= render "/groups/contents-left" do
  .content__right
    .content__right__top
      .content__right__top--group
      = @group.name
      .edit
        = link_to "Edit", edit_group_path(@group)
      .members
        %h3 Members
        - @group.users.each do |user|
          = user.name
    .content__right__middle
      .message__data
        = render "_messages-data", "@messages"
    .content__right__bottom
      =form_for [@group, @message] do |f|
        =f.text_field :body, placeholder: "type a message", class: "type"
        .content__right__bottom--icon
          = fa_icon "picture-o"
        =f.file_field :file, class: "file"
        .content__right__bottom--submit
          =f.submit "Send", class: "input"
