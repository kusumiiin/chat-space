.content
  .content__left
    .content__left__top
      .content__left__top--text
        = current_user.name
      .content__left__top--icon
        = link_to new_group_path do
          = fa_icon "pencil-square-o"
        = link_to edit_user_registration_path do
          = fa_icon "cog"
      .content__left__groups--info
        - current_user.groups.each do |group|
          =link_to group_messages_path(group) do
            .group__name
              = group.name
            - unless group.messages.last.nil?
              .group__last--message= group.messages.last.body
            - else
              .group__last--message まだメッセージがありません
  .content__right
    .content__right__top
      .content__right__top--group= @group.name
      .edit
        = link_to "Edit", edit_group_path(@group)
      %ul.members Members
      - @group.users.each do |user|
        %li.members__name= user.name
    .content__right__middle
      - @messages.each do |message|
        .message__data
          .message__data--name= message.user.name
          .message__data--date= message.created_at
          .message__data--text= message.body
    .content__right__bottom
      =form_for [@group, @message] do |f|
        =f.text_field :body, placeholder: "type a message", class: "type"
        .content__right__bottom--icon
          = fa_icon "picture-o"
        =f.file_field :file, class: "file"
        .content__right__bottom--submit
          =f.submit "Send", class: "input"
